<?xml version="1.0"?>

<!-- orcm configuration file. -->

<configuration>
    <version>3.0</version>
    <creation>2015Jun24-18:12-dvillen</creation>
    <role>RECORD</role>

    <scheduler>
        <!-- Identify the node that houses the ORCM scheduler. -->
        <!-- Only one allowed at this time                     -->
        <shost>localhost</shost>
        <port>55820</port>
    </scheduler>
    
    <junction>
        <type>cluster</type>
        <name>TheCluster</name>
        <controller>
            <aggregator>yes</aggregator>
            <host>localhost</host>
            <port>55805</port>
        </controller>
        <junction>
            <type>node</type>
            <name>localhost</name>
            <controller>
                <host>@</host>
                <port>55810</port>
                <aggregator>no</aggregator>
            </controller>
        </junction>
    </junction>
</configuration>
